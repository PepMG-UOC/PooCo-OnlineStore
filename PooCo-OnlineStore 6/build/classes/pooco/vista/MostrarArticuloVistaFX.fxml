<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pooco.controlador.Controlador">
    <children>
        <TextField fx:id="txtId" layoutX="202.0" layoutY="41.0" prefHeight="44.0" prefWidth="196.0" promptText="Introduce codigo" />

        <!-- Botón para mostrar el artículo -->
        <Button fx:id="btnmostrar" layoutX="209.0" layoutY="97.0" mnemonicParsing="false" onAction="#mostrarArticulo" prefHeight="44.0" prefWidth="183.0" text="Buscar">
            <font>
                <Font name="Arial" size="21.0" />
            </font>
        </Button>

        <Text fx:id="tDescripcion" layoutX="269.0" layoutY="176.0" text="Descripción" />
        <Text fx:id="tPrecio" layoutX="283.0" layoutY="206.0" text="Precio" />
        <Text fx:id="tGastos" layoutX="269.0" layoutY="236.0" text="Gastos" />
        <Text fx:id="tPreparacion" layoutX="283.0" layoutY="266.0" text="TiempoPreparacion" />
        <TextField fx:id="txtResult" editable="false" layoutX="209.0" layoutY="331.0" prefHeight="17.0" prefWidth="183.0" />

        <Button layoutX="209.0" layoutY="369.0" mnemonicParsing="false" onAction="#btnSalir" prefHeight="44.0" prefWidth="183.0" text="Volver">
            <font>
                <Font name="Arial" size="21.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
